<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="category_basic"
        android:title="Basic settings">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="display"
            android:summaryOff="Invisible"
            android:summaryOn="Visible"
            android:title="@string/display_text" />

        <ListPreference
            android:defaultValue="pref_color_black_value"
            android:entries="@array/color_labels"
            android:entryValues="@array/color_values"
            android:key="@string/pref_color_key"
            android:title="@string/change_text_color" />

        <EditTextPreference
            android:defaultValue="@string/pref_size_default"
            android:key="@string/pref_size_key"
            android:title="@string/text_size" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="category_contact"
        android:title="Contact developer">
        <Preference
            android:title="Report bugs"
            android:key="report_bugs"
            android:summary="Any bugs found? Please contact me: tomi.krisko@gmail.com">
        </Preference>

        <Preference
            android:title="Website"
            android:key="website"
            android:summary="https://www.hasznosdolgok.ml">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.hasznosdolgok.ml" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>